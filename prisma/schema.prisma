generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Invoice {
  id            String   @id @default(uuid())
  
  // RELATIONS
  // We use the existing 'shop' string field to link to the Shop model
  shop          String   
  shopData      Shop     @relation(fields: [shop], references: [shop])

  orderId       String   @unique
  orderNumber   String
  customerId    String
  customerName  String?
  customerEmail String
  amount        Float
  currency      String
  dueDate       DateTime
  status        String   @default("PENDING") // PENDING, PAID, OVERDUE
  createdAt     DateTime @default(now())
}

model Shop {
  id             String        @id @default(uuid())
  shop           String        @unique // This is the join key for Invoices
  
  // BILLING FIELDS
  plan           PlanTier      @default(FREE)
  subscriptionId String?
  billingStatus  BillingStatus @default(PENDING)
  customerCount  Int           @default(0)
  
  // BRANDING FIELDS (New)
  brandColor     String        @default("#008060")
  logoUrl        String?
  businessName   String?
  businessAddress String?

  // RELATIONS
  invoices       Invoice[]

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

enum PlanTier {
  FREE
  GROWTH
  PRO
}

enum BillingStatus {
  PENDING
  ACTIVE
  FROZEN
  CANCELLED
  DECLINED
}